# 샘플 서비스 환경 변수 예시

# 애플리케이션 설정
APP_ENV=development
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://user:password@localhost/sample_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis 설정
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Kafka 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=sample-service-group

# JWT 설정
JWT_SECRET=your-super-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json

# 모니터링 설정
METRICS_ENABLED=true
METRICS_PORT=9090